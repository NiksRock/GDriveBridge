# ================================
# GDriveBridge Monorepo (.npmrc)
# pnpm + Turbo + NestJS + Vite
# ================================

# Avoid noisy Windows native dependency warnings
ignoredBuiltDependencies[]=@nestjs/core
ignoredBuiltDependencies[]=esbuild
ignoredBuiltDependencies[]=msgpackr-extract
ignoredBuiltDependencies[]=unrs-resolver

# Ensure node_modules is hoisted correctly for monorepos
shamefully-hoist=true

# Faster installs + stable lockfile behavior
auto-install-peers=true
strict-peer-dependencies=false

# Store pnpm cache locally (optional but helpful)
store-dir=.pnpm-store
prefer-frozen-lockfile=true
